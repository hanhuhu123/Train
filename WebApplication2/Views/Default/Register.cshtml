    function ValidateIdCard() {
        var idcard = $("#idcard").val();
        
        //验证身份证
        var regIdcard = /(^\d{15}$)|(^\d{18}$)|(^\d{17}(\d|X|x)$)/;
        if (regIdcard.test(idcard) == false &&idcard != null) {
