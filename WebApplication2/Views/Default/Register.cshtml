    function ValidateEmail() {
        var email = $("#email").val();
            
        var reg = new RegExp("^[a-z0-9]+([._\\-]*[a-z0-9])*([a-z0-9]+[-a-z0-9]*[a-z0-9]+.){1,63}[a-z0-9]+$"); //正则表达式
        if (reg.test(email) == false && email != null) {
            $("#emailSpan").html("邮箱输入错误");
        }
        
        else if(reg.test(email) == true)
        {
          $("#emailSpan").html("*");
        }
        if (email == "") {
