    <script type="text/javascript">
        window.onload = function () {
            var iTgl = new k_iToggle();
            iTgl.init({
                boxId: 'box',
                numId: 'num',
                imgId: 'imgs',
                isAuto: true,
                aCls: 'act',
                iCls: 'imgs1',
                direct: 'crt'
            });
            chg(iTgl, 'chg');
            _auto(iTgl, 'auto_1');
            //改变方向
            function chg(o, id) {
                $('#' + id).click(function () {
                    if (o.direct() == 'crt') {
                        o.direct('lvl');
                        $(this).text('纵向');
                    } else {
                        o.direct('crt');
                        $(this).text('横向');
                    }
                });
            }

            function _auto(o, id) {
                $('#' + id).click(function () {
                    if (o.isAuto) {
                        o.isAuto = false;
                        $(this).text('自动播放已停止');
                    } else {
                        o.isAuto = true;
                        o.auto();
                        $(this).text('自动播放');
                    }
                });
            }
        }
    </script>
    <script type="text/javascript">

        $(function () {
            var wweya_li = $("div.tab_menu ul li");
            wweya_li.click(function () {
                $(this).addClass("selected")
                    .siblings().removeClass("selected");
                var index = wweya_li.index(this);
                $("div.tab_box > div")
                    .eq(index).show(100)
                    .siblings().hide();
            }).hover(function () {
                $(this).addClass("hover");
            }, function () {
                $(this).removeClass("hover");
            });
        });
    </script>
